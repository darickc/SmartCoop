@if (Editing)
{
    <div class="bold">Switch</div>
    <div>
        <MatTextField @bind-Value="@Device.Name" Label="Name" Required="true"></MatTextField>
        <MatTextField @bind-Value="@Device.Pin" Label="Pin Number" Required="true" Type="number" min="1" max="30"></MatTextField>
    </div>
}
else
{
    <div class="bold"><MatIcon Icon="toggle_off"></MatIcon> @Device.Name</div>
    <div>
        <MatSlideToggle @bind-Value="@On"></MatSlideToggle>
    </div>
}
